@page
@model RazorPagesPlayground.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="m-5">Index</h1>




<a class="btn btn-primary" asp-page="Create">Create Post</a>
<div class="col-lg-8 mt-3">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Content)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Post) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        <a class="text-primary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="text-primary" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a class="text-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

